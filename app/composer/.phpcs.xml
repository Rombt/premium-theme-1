<?xml version="1.0"?>
<ruleset name="WordPressTheme">

    <description>Custom ruleset for WordPress theme development</description>

    <!-- Проверяем только PHP -->
    <arg name="extensions" value="php" />

    <!-- Основные стандарты WP -->
    <rule ref="WordPress" />
    <rule ref="WordPress-Extra" />
    <rule ref="WordPress-Docs" />

    <!-- Дополнительные правила (необязательно, но полезно ) -->
    <rule ref="Generic.PHP.NoSilencedErrors" />
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace" />

    <rule ref="WordPress.Security.EscapeOutput">
        <properties>
            <property name="customEscapingFunctions" type="array">
                <element value="rmbt_get_redux_field" />
            </property>
        </properties>
    </rule>


    <!-- Исключеаем обход этих каталогов-->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>./app/gulp/*</exclude-pattern>
    <exclude-pattern>assets/js/*</exclude-pattern>
    <exclude-pattern>assets/css/*</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>

</ruleset>